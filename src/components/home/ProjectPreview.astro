---
import Preview from './Preview.astro';
import sLogo from '../../images/scribeLogo.jpeg';
import nnLogo from '../../images/nnLogo.png';
import suLogo from '../../images/sustain.jpeg';

---

<div class="dark:bg-neutral-800 bg-neutral-100 mt-12 mb-6 w-10/12 mx-auto rounded-md py-8 px-4 shadow-2xl">
    <div class="flex flex-col gap-3">
        <div class="flex items-center gap-5">
            <div class="bp-grad">   
                <i class="fa-solid fa-folder-open fa-2xl text-transparent"></i>
            </div>

            <h1 class="text-4xl">Recent Projects</h1>
        </div>
        <p class="text-lg">What I've been working on.</p>
        <div class="flex flex-col gap-6 p-0 w-full">
            <Preview title="Scribe" description="Using Speech Recognition and GPT4 Models to Generate Meeting Notes" path={sLogo} link="/evan-portfolio/projects/scribe"/>
            <Preview title="Sustain.io" description="An S&P500 Sustainability Analysis Platform" path={suLogo} link="/evan-portfolio/projects/sustainio"/>
            <Preview title="C-NeuralNet" description="A barebones feedforward neural network framework, built in plain C." path={nnLogo} link="/evan-portfolio/projects"/>
        </div>
        <div class="group flex mt-2 items-center gap-2">
            <a class="text-lg" href="/evan-portfolio/projects/">View all projects
            <i class="fa-solid fa-arrow-right transition duration-100 group-hover:translate-x-1"></i></a>
        </div>
    </div>
</div>