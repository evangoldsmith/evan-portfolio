---
import logo from '../images/logo.jpg';

const headings = [
    {
        name: 'Home',
        link: '/evan-portfolio/',
        icon: 'fa-house'

    },
    {
        name: 'About',
        link: '/evan-portfolio/about/',
        icon: 'fa-user'
    },
    {
        name: 'Projects',
        link: '/evan-portfolio/projects/',
        icon: 'fa-folder'
    },
    // {
    //     name: 'Blog',
    //     link: '/evan-portfolio/blog/',
    //     icon: 'fa-pen-to-square'
    // },
    // {
    //     name: 'Resume',
    //     link: '/evan-portfolio/resume/',
    //     icon: 'fa-file'
    // }
]
---

<nav class="dark:bg-neutral-800 bg-neutral-100 shadow-2xl">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <div class="flex flex-row gap-2 align-middle">
            <p class="text-2xl">Evan Goldsmith</p>
        </div>

        <div class="hidden w-full md:block md:w-auto" >
            <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg md:flex-row md:space-x-8 md:mt-0 md:border-0 dark:border-gray-700">
                {headings.map((heading) => (
                    <li class="flex items-center bp-grad-hover transform ease"><i class={`fa-solid ${heading.icon} fa-small`}></i><a href={`${heading.link}`} class="block py-2 pl-3 pr-4 rounded border-0 p-0" aria-current="page">{heading.name}</a></li>
                ))}
            </ul>
        </div>

        <div class="block md:hidden">
            <button class="hamburger_expand">
                <i class="fa-solid fa-bars fa-2x bp-grad-hover"></i>
            </button>
        </div>
        <div class="side-bar hidden flex md:hidden fixed top-0 left-0 right-0 bottom-0 z-50 bg-black p-8 opacity-90 max-w-min justify-self-end justify-end flex-shrink-0 text-white">
            <ul class="font-medium max-w-min h-min flex flex-col gap-2 items-end p-4 md:p-0 mt-4 border border-gray-100 rounded-lg dark:border-gray-700 opacity-100">
                <button class="hamburger_close"><i class="fa-solid fa-x bp-grad-hover mb-2"></i></button>
                {headings.map((heading) => (
                    <a href={`${heading.link}`} class="bp-grad-hover"><li class="flex gap-4 items-center">{heading.name}<i class={`fa-solid ${heading.icon} fa-small`}></i></li></a>
                ))}
            </ul>
        </div>
        <script>
            import '../utils/menu.ts';
        </script>
</nav>