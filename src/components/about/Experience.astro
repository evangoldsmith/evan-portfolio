---
import TRLogo from '../../images/tr.svg';
import HPLogo from '../../images/hp.svg';
import BBLogo from '../../images/bb.svg';
---

<div class="dark:bg-neutral-800 bg-neutral-100 mt-12 w-10/12 mx-auto rounded-md py-8 px-4 shadow-2xl mb-12">
    <div class="flex flex-col gap-3">
        <div class="flex items-center gap-5">
            <div class="bp-grad">
                <i class="fa-solid fa-briefcase fa-xl text-transparent"></i>
            </div>

            <h1 class="text-4xl">Experience</h1>
        </div>
        <div class="flex flex-wrap gap-6 gap-y-16 justify-evenly items-center mt-4">

          <div class="flex flex-col gap-4 justify-center items-center text-center">
            <h2 class="text-2xl">CDL Techrangers</h2>
            <a href="https://techrangers.cdl.ucf.edu/"
            class="shadow-sm transform ease hover:scale-105 w-[144px] h-[144px] flex justify-center">
              <img class="rounded-md shadow-lg"
                  src={TRLogo.src}
                  width="144"
                  alt="Tech Rangers Logo">
            </a>
            <div>
              <p>Software Developer</p>
              <p>August 2022 - May 2025</p>
            </div>
          </div>

          <div class="flex flex-col gap-4 justify-center items-center text-center">
            <h2 class="text-2xl">Hewlett-Packard</h2>
            <a href="https://www.bloomberg.com/company/"
            class="rounded-md shadow-lg transform ease hover:scale-105 w-[144px] h-[144px] flex justify-center bg-slate-100">
              <img
                  src={HPLogo.src}
                  width="100"
                  alt="Bloomberg Logo">
            </a>
            <div>
              <p>DevOps Engineer Intern</p>
              <p>May 2024 - August 2024</p>
            </div>
          </div>

          <div class="flex flex-col gap-4 justify-center items-center text-center">
            <h2 class="text-2xl">Bloomberg</h2>
            <a href="https://www.bloomberg.com/company/"
            class="rounded-md shadow-lg transform ease hover:scale-105 w-[144px] h-[144px] flex justify-center bg-slate-100">
              <img
                  src={BBLogo.src}
                  width="100"
                  alt="Bloomberg Logo">
            </a>
            <div>
              <p>Software Engineer</p>
              <p>July 2025 - Present</p>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>